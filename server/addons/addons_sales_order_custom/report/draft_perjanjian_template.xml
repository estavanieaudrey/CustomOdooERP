<odoo>
    <!-- Template untuk Draft Perjanjian -->
    <template id="report_draft_perjanjian_template">
        <t t-name="addons_sales_order_custom.report_draft_perjanjian">
            <div class="page">
                <h1>Draft Perjanjian</h1>
                <p>Nomor Pesanan: <t t-esc="doc.name"/></p>
                <p>Nama Customer: <t t-esc="doc.partner_id.name"/></p>
                <p>Alamat Customer: <t t-esc="doc.partner_id.contact_address"/></p>
                <p>Ukuran Buku: <t t-esc="doc.ukuran_buku"/></p>
                <p>Jenis Cetakan Isi: <t t-esc="doc.jenis_cetakan_isi"/></p>
                <p>HPP per Unit: <t t-esc="doc.hpp_per_unit"/></p>
                <p>Total Keseluruhan: <t t-esc="doc.hpp_total"/></p>
            </div>
        </t>
    </template>

    <!-- Deklarasi Laporan PDF -->
    <record id="action_report_draft_perjanjian" model="ir.actions.report">
        <field name="name">Draft Perjanjian</field>
        <field name="model">sale.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">addons_sales_order_custom.report_draft_perjanjian</field>
        <field name="binding_model_id" ref="sale.model_sale_order"/>
        <field name="binding_type">report</field>
    </record>
</odoo>
